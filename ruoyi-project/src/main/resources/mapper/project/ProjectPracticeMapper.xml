<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.mapper.ProjectPracticeMapper">
    
    <resultMap type="ProjectPractice" id="ProjectPracticeResult">
        <result property="id"    column="id"    />
        <result property="moduleId"    column="module_id"    />
        <result property="name"    column="name"    />
        <result property="content"    column="content"    />
        <result property="price"    column="price"    />
        <result property="imgUrl"    column="img_url"    />
        <result property="fileUrl"    column="file_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="moduleName"    column="moduleName"    />
        <result property="numSort"    column="num_sort"    />
        <result property="qqNumber"    column="qq_number"    />
        <result property="emailNumber"    column="email_number"    />
        <result property="qrCode"    column="qr_code"    />
    </resultMap>

    <sql id="selectProjectPracticeVo">
        select * from project_practice
    </sql>

    <select id="selectProjectPracticeList" parameterType="ProjectPractice" resultMap="ProjectPracticeResult">
        select pr.*,  md.name as moduleName from project_practice as pr
        left join project_module as md on md.id = pr.module_id
        <where>
            <if test="moduleId != null "> and module_id = #{moduleId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
        order by pr.num_sort asc
    </select>
    
    <select id="selectProjectPracticeById" parameterType="Long" resultMap="ProjectPracticeResult">
        <include refid="selectProjectPracticeVo"/>
        where id = #{id}
    </select>

    <insert id="insertProjectPractice" parameterType="ProjectPractice">
        insert into project_practice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="moduleId != null">module_id,</if>
            <if test="name != null">name,</if>
            <if test="numSort != null">num_sort,</if>
            <if test="qqNumber != null">qq_number,</if>
            <if test="emailNumber != null">email_number,</if>
            <if test="qrCode != null">qr_code,</if>
            <if test="content != null">content,</if>
            <if test="price != null">price,</if>
            <if test="imgUrl != null">img_url,</if>
            <if test="fileUrl != null">file_url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="moduleId != null">#{moduleId},</if>
            <if test="name != null">#{name},</if>
            <if test="numSort != null">#{numSort},</if>
            <if test="qqNumber != null">#{qqNumber},</if>
            <if test="emailNumber != null">#{emailNumber},</if>
            <if test="qrCode != null">#{qrCode},</if>
            <if test="content != null">#{content},</if>
            <if test="price != null">#{price},</if>
            <if test="imgUrl != null">#{imgUrl},</if>
            <if test="fileUrl != null">#{fileUrl},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateProjectPractice" parameterType="ProjectPractice">
        update project_practice
        <trim prefix="SET" suffixOverrides=",">
            <if test="moduleId != null">module_id = #{moduleId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="content != null">content = #{content},</if>
            <if test="numSort != null">num_sort = #{numSort},</if>
            <if test="emailNumber != null">email_number = #{emailNumber},</if>
            <if test="qqNumber != null">qq_number = #{qqNumber},</if>
            <if test="qrCode != null">qr_code = #{qrCode},</if>
            <if test="price != null">price = #{price},</if>
            <if test="imgUrl != null">img_url = #{imgUrl},</if>
            <if test="fileUrl != null">file_url = #{fileUrl},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteProjectPracticeById" parameterType="Long">
        delete from project_practice where id = #{id}
    </delete>

    <delete id="deleteProjectPracticeByIds" parameterType="String">
        delete from project_practice where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>