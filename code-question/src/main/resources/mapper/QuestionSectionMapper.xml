<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mapper.QuestionSectionMapper">
    
    <resultMap type="com.ruoyi.domain.QuestionSection" id="QuestionSectionResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="isHidden"    column="is_hidden"    />
        <result property="externalUrl"    column="external_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remarks"    column="remarks"    />
    </resultMap>

    <sql id="selectQuestionSectionVo">
        select id, name, sort_order, is_hidden, external_url, create_by, create_time, update_by, update_time, remarks from question_section
    </sql>

    <select id="selectQuestionSectionList" parameterType="com.ruoyi.domain.QuestionSection" resultMap="QuestionSectionResult">
        <include refid="selectQuestionSectionVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="isHidden != null "> and is_hidden = #{isHidden}</if>
        </where>
    </select>
    
    <select id="selectQuestionSectionById" parameterType="Long" resultMap="QuestionSectionResult">
        <include refid="selectQuestionSectionVo"/>
        where id = #{id}
    </select>

    <insert id="insertQuestionSection" parameterType="com.ruoyi.domain.QuestionSection" useGeneratedKeys="true" keyProperty="id">
        insert into question_section
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="isHidden != null">is_hidden,</if>
            <if test="externalUrl != null">external_url,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remarks != null">remarks,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="isHidden != null">#{isHidden},</if>
            <if test="externalUrl != null">#{externalUrl},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remarks != null">#{remarks},</if>
         </trim>
    </insert>

    <update id="updateQuestionSection" parameterType="com.ruoyi.domain.QuestionSection">
        update question_section
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="isHidden != null">is_hidden = #{isHidden},</if>
            <if test="externalUrl != null">external_url = #{externalUrl},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteQuestionSectionById" parameterType="Long">
        delete from question_section where id = #{id}
    </delete>

    <delete id="deleteQuestionSectionByIds" parameterType="String">
        delete from question_section where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>